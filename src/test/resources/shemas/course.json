{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Online Course",
  "description": "Сложная схема для описания онлайн-курса с уроками, авторами и настройками",
  "type": "object",
  "properties": {
    "courseId": {
      "type": "string",
      "pattern": "^[A-Z0-9]{8}$",
      "description": "Уникальный идентификатор курса из 8 заглавных букв или цифр"
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "maxLength": 1000
    },
    "authors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "minLength": 3 },
          "role": { "type": "string", "enum": ["instructor", "assistant", "guest"] },
          "contact": {
            "type": "object",
            "properties": {
              "email": { "type": "string", "format": "email" },
              "phone": { "type": ["string", "null"], "pattern": "^\\+?\\d{10,15}$" }
            },
            "required": ["email"],
            "additionalProperties": false
          }
        },
        "required": ["name", "role", "contact"],
        "additionalProperties": false
      }
    },
    "lessons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "lessonId": { "type": "string", "pattern": "^L[0-9]{3}$" },
          "title": { "type": "string", "minLength": 5 },
          "contentType": { "type": "string", "enum": ["video", "quiz", "article"] },
          "content": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "videoUrl": { "type": "string", "format": "uri" },
                  "duration": { "type": "integer", "minimum": 10 }
                },
                "required": ["videoUrl", "duration"],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "questions": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "object",
                      "properties": {
                        "questionText": { "type": "string", "minLength": 1 },
                        "type": { "type": "string", "enum": ["multiple-choice", "true-false"] },
                        "options": {
                          "type": "array",
                          "minItems": 2,
                          "items": { "type": "string", "minLength": 1 }
                        },
                        "correctAnswer": { "type": "string", "minLength": 1 }
                      },
                      "required": ["questionText", "type", "correctAnswer"],
                      "additionalProperties": false
                    }
                  }
                },
                "required": ["questions"],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "articleText": { "type": "string", "minLength": 20 }
                },
                "required": ["articleText"],
                "additionalProperties": false
              }
            ]
          }
        },
        "required": ["lessonId", "title", "contentType", "content"],
        "additionalProperties": false
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "isPublished": { "type": "boolean", "default": false },
        "enrollmentLimit": { "type": ["integer", "null"], "minimum": 1 },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        }
      },
      "required": ["isPublished"],
      "additionalProperties": false
    }
  },
  "required": ["courseId", "title", "authors", "lessons"],
  "additionalProperties": false
}
