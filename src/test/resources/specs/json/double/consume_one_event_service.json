
{
  "openapi": "3.0.1",
  "info": {
    "title": "consume_one_event_service",
    "description": "AxenAPI Specification for a service that consume an event from a single Kafka topic",
    "version": "1.0.0"
  },
  "paths": {
    "/kafka/group1/topic1/Event1": {
      "post": {
        "summary": "Send an event",
        "responses": {
          "200": {
            "description": "Event sent successfully"
          }
        }
      }
    },
    "/events/{eventId}": {
      "summary": "Retrieve a specific event by ID",
      "description": "Description of the HTTP node",
      "get": {
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "description": "ID of the event to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Event retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event1"
                }
              }
            }
          },
          "404": {
            "description": "Event not found"
          }
        }
      },
      "patch": {
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "description": "ID of the event to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Event retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event1"
                }
              }
            }
          },
          "404": {
            "description": "Event not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Event1": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the event"
          },
          "data": {
            "type": "object",
            "description": "Payload of the event"
          }
        },
        "x-incoming": {
          "topics": [
            "topic1"
          ]
        }
      }
    }
  }
}
